extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Register
        form(method='POST' action='/register')
          div.form-group
            label(for='name') Name
            input.form-control(type='text' id='name' placeholder='Name' name='name')
          div.form-group
            label(for='email') Email
            input.form-control(type='text' id='email' placeholder='email' name='email')
          div.form-group
            label(for='password') Password
            input.form-control(type='password' id='password' placeholder='password' name='password')
          div.form-group
            label(for='phone') Phone
            input.form-control(type='text' id='phone' placeholder='Phone' name='phone')
          button.btn.btn-primary.col-md-6(type='submit') Register
        a(href="/display")
          button.btn.btn-primary.col-md-6(type='button') View Records